---
layout: nil
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
<title>{{ site.title }}</title>
<subtitle>{{ site.tagline }}</subtitle>
<icon>/images/favicon.png</icon>
<link href="http://bnjmn.org/" />
<link href="http://bnjmn.org/atom.xml" rel="self" />
<updated>{{ site.time | date_to_xmlschema }}</updated>
<id>http://bnjmn.org/</id>
<author>
	<name>{{ site.title }}</name>
	<email>{{ site.email }}</email>
</author>

{% for post in site.posts %}
	<entry>
		<title>{{ post.title }}</title>
		<link href="http://bnjmn.org{{ post.url }}" />
		<updated>{{ post.date | date_to_xmlschema }}</updated>
		<id>http://bnjmn.org{{ post.id }}</id>
		<content type="html">{{ post.content | xml_escape }}</content>
	</entry>
{% endfor %}
 
</feed>